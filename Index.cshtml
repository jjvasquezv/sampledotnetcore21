@{
    ViewData["Title"] = "Peso Ideal";
}

<h2>@ViewData["Title"]</h2>

<form method="post" asp-action="CalcularPesoIdeal">
    <label for="sexo">Sexo (masculino/femenino):</label>
    <input type="text" id="sexo" name="sexo" required />
    <br />
    <label for="edad">Edad:</label>
    <input type="number" id="edad" name="edad" required />
    <br />
    <label for="estatura">Estatura (en cm):</label>
    <input type="number" id="estatura" name="estatura" required />
    <br />
    <button type="submit">Calcular</button>
</form>

@if (ViewBag.PesoIdeal != null)
{
    <h3>Peso Ideal: @ViewBag.PesoIdeal kg</h3>
}
